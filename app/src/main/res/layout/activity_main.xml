<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.MainActivity">

    <Button
        android:id="@+id/change_monitor_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Monitor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/top_rel_layout"
        app:layout_constraintStart_toStartOf="@+id/top_rel_layout" />

    <RelativeLayout
        android:id="@+id/top_rel_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/change_monitor_btn"
        tools:layout_editor_absoluteX="0dp">

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>